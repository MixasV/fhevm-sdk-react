{
  "name": "@mixaspro/devtools",
  "version": "1.0.0",
  "description": "Browser DevTools extension for debugging FHEVM applications",
  "keywords": [
    "fhevm",
    "devtools",
    "debugging",
    "browser-extension",
    "ethereum"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/fhevm-sdk-pro.git",
    "directory": "packages/devtools"
  },
  "license": "MIT",
  "author": "FHEVM SDK Contributors",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "extension",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "tsup && npm run build:extension",
    "build:extension": "echo 'Extension build placeholder'",
    "clean": "rm -rf dist extension/dist",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mixaspro/core": "workspace:*"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.258",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
