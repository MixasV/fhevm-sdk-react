{
  "name": "@mixaspro/cli",
  "version": "1.0.0",
  "description": "CLI tool for scaffolding FHEVM applications and generating type-safe code",
  "keywords": [
    "fhevm",
    "cli",
    "scaffolding",
    "code-generation",
    "ethereum"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/fhevm-sdk-pro.git",
    "directory": "packages/cli"
  },
  "license": "MIT",
  "author": "FHEVM SDK Contributors",
  "type": "module",
  "bin": {
    "fhevm-sdk": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mixaspro/core": "workspace:*",
    "commander": "^11.1.0",
    "prompts": "^2.4.2",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/prompts": "^2.4.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
