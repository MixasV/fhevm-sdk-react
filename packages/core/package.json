{
  "name": "@mixaspro/core",
  "version": "1.0.0",
  "description": "Framework-agnostic core SDK for FHEVM (Fully Homomorphic Encryption Virtual Machine)",
  "keywords": [
    "fhevm",
    "fully-homomorphic-encryption",
    "ethereum",
    "zama",
    "tfhe",
    "privacy",
    "encryption"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/fhevm-sdk-pro.git",
    "directory": "packages/core"
  },
  "license": "MIT",
  "author": "FHEVM SDK Contributors",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts --ignore-pattern '**/__tests__/**' --ignore-pattern '**/*.test.ts'",
    "lint:fix": "eslint src --ext .ts --fix --ignore-pattern '**/__tests__/**' --ignore-pattern '**/*.test.ts'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@zama-fhe/relayer-sdk": "^0.2.0",
    "ethers": "^6.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
